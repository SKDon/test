@using Alicargo.DataAccess.Contracts.Enums
@using Alicargo.Mvc
@{
	Layout = null;
}
<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="google-site-verification" content="Xxal5fI_RjS8LVjdslBB645vRbt8zTWp9-8QVb5knz8" />

		<title>Tracker</title>
		<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		@Styles.Render(CssPaths.Common)
		@Scripts.Render(JsPaths.CommonJs)
		@switch(UICulture)
		{
			case TwoLetterISOLanguageName.Russian:
				@Scripts.Render(JsPaths.RuJs)
				break;
			case TwoLetterISOLanguageName.Italian:
				@Scripts.Render(JsPaths.ItJs)
				break;
			case TwoLetterISOLanguageName.Polish:
				@Scripts.Render(JsPaths.PlJs)
				break;
		}
	</head>
	<body>		
		<div id="wrap">
			@Html.Partial("Menu")
			<div class="container">
				@RenderBody()
			</div>			
		</div>
		@Html.Partial("DynamicScripts")
		@RenderSection("scripts", false)
	</body>
</html>