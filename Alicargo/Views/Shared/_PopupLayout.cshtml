@using Alicargo.DataAccess.Contracts.Enums
@using Alicargo.Mvc
@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Avion Russia</title>
	<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	@Styles.Render(CssPaths.Common)
	@Scripts.Render(JsPaths.CommonJs)
	@switch(UICulture)
	{
		case TwoLetterISOLanguageName.Russian:
			@Scripts.Render(JsPaths.RuJs)
			break;
		case TwoLetterISOLanguageName.Italian:
		@Scripts.Render(JsPaths.ItJs)
			break;
	}
</head>
<body>
	<div id="wrap">
		<div class="container">
			@RenderBody()
		</div>
	</div>
	@Html.Partial("DynamicScripts")
	@RenderSection("scripts", false)
</body>
</html>