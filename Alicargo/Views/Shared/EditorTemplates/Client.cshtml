	</div>
</div>
<div class="row">
	<div class="span4">
		@Html.EditorWithLabelFor(model => model.KPP)
	</div>
	<div class="span4">
		@Html.EditorWithLabelFor(model => model.RS)
	</div>
	<div class="span4">
		@Html.EditorWithLabelFor(model => model.KS)
	</div>
</div>
<div class="row">
	<div class="span8">
		@Html.LabelFor(model => model.Contacts)
