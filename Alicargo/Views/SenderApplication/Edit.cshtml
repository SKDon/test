@using Alicargo.Core.Resources
@using Alicargo.MvcHelpers.Extensions
@using Resources
@model ApplicationSenderModel
<div class="container-edit">
	<h1>
		@Pages.ApplicationEdit @ViewBag.ApplicationNumber
		<span>@Entities.Nic: @ViewBag.Nic</span>
	</h1>
	@Html.EditPage(Url.Action(MVC.SenderApplication.Edit()), Pages.Save,
	Html.ActionLink(Pages.Files, MVC.Files.SenderApplication((long)ViewBag.ApplicationId), new { @class = "btn btn-info" }))
</div>