@using Alicargo.Contracts.Enums
@inherits BaseWebViewPage<ApplicationIndexModel>

<style>
	.container {
		padding: 0 20px;
		width: auto;
	}
</style>

@Html.Partial("Tools")
<div id="application-grid" class="grid"></div>
<script type="text/x-kendo-template" id="application-grid-details">
	@if (IdentityService.IsInRole(RoleType.Admin))
	{
		@Html.Partial("AdminTemplate")
	}
	else if (IdentityService.IsInRole(RoleType.Sender))
	{
		@Html.Partial("SenderTemplate")
	}
	else if (IdentityService.IsInRole(RoleType.Client))
	{
		@Html.Partial("ClientTemplate")
	}	
</script>

@section scripts
{
	@Scripts.Render(Url.Action(MVC.DynamicScript.Roles()))
	@Scripts.Render(Url.Action(MVC.DynamicScript.Localization()))
	@Scripts.Render(Url.Action(MVC.DynamicScript.States()))
	@Scripts.Render(Url.Action(MVC.DynamicScript.Urls()))
	@Scripts.Render("~/Scripts/app/Alicargo.js")
	@Scripts.Render("~/Scripts/app/Application/Columns.js")
	@Scripts.Render("~/Scripts/app/Application/Grid.js")
}