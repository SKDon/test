@using Alicargo.App_Start.Mvc
@using Alicargo.MvcHelpers.Extensions
@using Resources
@model Alicargo.ViewModels.EmailTemplate.EventTemplateModel
<p>
	@Html.ActionLink(Pages.Help, MVC.EmailTemplate.Help(), new { @class = "pull-right", target = "balnk" })
	<b>
		@Pages.Event - @Alicargo.DataAccess.Contracts.Resources.EventType.ResourceManager.GetString(Model.EventType.ToString())
	</b>
</p>
@Html.EditPage(Url.Action(MVC.EmailTemplate.Edit()), Pages.Save)
@section scripts
{
	@Scripts.Render(JsPaths.TemplateEditJs)
}