@using Alicargo.DataAccess.Contracts.Enums
@inherits BaseWebViewPage

var Alicargo = (function($a){

$a.Roles = (function($r){

$r.IsAdmin = @IdentityService.IsInRole(RoleType.Admin).ToString().ToLowerInvariant();
$r.IsSender = @IdentityService.IsInRole(RoleType.Sender).ToString().ToLowerInvariant();
$r.IsBroker = @IdentityService.IsInRole(RoleType.Broker).ToString().ToLowerInvariant();
$r.IsClient = @IdentityService.IsInRole(RoleType.Client).ToString().ToLowerInvariant();
$r.IsForwarder = @IdentityService.IsInRole(RoleType.Forwarder).ToString().ToLowerInvariant();
$r.IsCarrier = @IdentityService.IsInRole(RoleType.Carrier).ToString().ToLowerInvariant();

return $r;
}($a.Roles || {}));

return $a;
}(Alicargo || {}))