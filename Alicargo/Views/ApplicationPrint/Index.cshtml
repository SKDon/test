@model ApplicationPrintModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Tracker</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        .container {
            position: absolute;
            top: 50%;
            left: 50%;
            margin-right: -50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }

        span {
            font-size: 30px;
            font-weight: bold;
        }

            span.text {
                font-size: 80px;
            }
    </style>
</head>
<body>
    <div class="container">
        <span class="text">
            @Html.DisplayFor(model => model.Text)
        </span>
        <br />
        <span>
            @Html.DisplayFor(model => model.City)
        </span>
        <script>
            window.print();
        </script>
    </div>
</body>
</html>